{
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=5.4.0",
        "yiisoft/yii2": ">=2.0.15",
        "yiisoft/yii2-bootstrap": "*",
        "yiisoft/yii2-swiftmailer": "*",
        "yiisoft/yii2-jui": "^2.0",
        "yii2tech/ar-position": "*",
        "2amigos/yii2-usuario": "~1.0",
        "insolita/yii2-migration-generator": "^2.2",
        "trntv/yii2-aceeditor": "^2.0.0",
        "ckeditor/ckeditor": "dev-full/4.7.x",
        "mranger/yii2-ckeditor": "*",
        "himiklab/yii2-sitemap-module" : "*",
        "kartik-v/yii2-widgets": "*",
        "kartik-v/yii2-datecontrol": "dev-master",
        "kartik-v/yii2-date-range": "dev-master",
        "sadovojav/yii2-image-thumbnail": "*",
        "tpoxa/shortcodes": "dev-master",
        "bower-asset/vue": "^2.4",
        "bower-asset/dropzone": "^4.3"
    },
    "require-dev": {
        "codeception/base": "^2.2.3",
        "codeception/verify": "~0.3.1",
        "yiisoft/yii2-debug": "*",
        "yiisoft/yii2-gii": "*",
        "yiisoft/yii2-faker": "*"
    },
    "config": {
        "process-timeout": 1800,
        "optimize-autoloader": true,
        "fxp-asset": {
            "installer-paths": {
                "npm-asset-library": "vendor/npm-asset",
                "bower-asset-library": "vendor/bower-asset"
            }
        }
    }
}
